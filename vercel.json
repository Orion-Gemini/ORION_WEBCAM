{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "api/chat.py"
    },
    {
      "src": "/api/reset",
      "dest": "api/reset.py"
    },
    {
      "src": "/(.*)",
      "dest": "static/index.html"
    }
  ],
  "env": {
    "GAS_PROXY_URL": "@gas_proxy_url",
    "TELEGRAM_TOKEN": "@TELEGRAM_TOKEN"
  }
}